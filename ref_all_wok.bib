Title = {An Investigation into Agile Methods in Embedded Systems Development},
Booktitle = {COMPUTATIONAL SCIENCE AND ITS APPLICATIONS - ICCSA 2012, PT III},
Series = {Lecture Notes in Computer Science},
Year = {2012},
Volume = {7335},
Pages = {576-591},
Note = {12th International Conference on Computational Science and Its
