Title = {Clashes between culture and software development methods: The case of
   the Israeli hi-tech industry and extreme programming},
Booktitle = {AGILE 2005, Proceedings},
Year = {2005},
Pages = {59-69},
Note = {Agile United 2005 Conference, Denver, CO, JUL 24-29, 2005},
Organization = {Assoc Comp Machinery; DSDM Consortium; Agile Project Leadership Network;
